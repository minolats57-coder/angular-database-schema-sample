{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "node proxy-server.js",
    "restartPolicyType": "unless-stopped",
    "healthchecks": {
      "enabled": true,
      "cpu": false,
      "memory": false
    }
  }
}
